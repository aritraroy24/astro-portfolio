---
// layout import
import Layout from "@layouts/Layout.astro";

// component import
import { Image } from "astro:assets";
import Header from "@components/AstroIslands/Common/Header";
import Footer from "@components/AstroComponents/Footer.astro";
import Socials from "@components/AstroComponents/Socials.astro";

// style import
import "@assets/styles/posts.scss";

// asset import
import blogImage from "@images/content/tutorial/blogs.svg";
import videoImage from "@images/content/tutorial/videos.svg";

// defining page title and description for all publications page
const {
  pageTitle = "Aritra Roy | All Tutorials",
  pageDescription = "Discover a vast array of computational chemistry and materials science tutorials, including engaging YouTube videos and informative articles, in my extensive collection.",
  frontmatter,
  cover,
} = Astro.props;

const imgData = [
  {
    src: blogImage,
    alt: "Blog Posts",
    url: "blogs",
    text: "Blogs Posts",
  },
  {
    src: videoImage,
    alt: "YouTube Videos",
    url: "videos",
    text: "YouTube Videos",
  },
];
---

<Layout title={pageTitle} description={pageDescription} {frontmatter} {cover}>
  <Header isHomePage={false} client:only="react" />
  <Socials />
  <div class="postsNavigationDiv">
    <!-- publications  heading section -->
    <h1 style="margin-bottom: 0;">All Tutorials</h1>
    <!-- all publications -->
    <div class="allPostsContainer">
      {
        imgData.map((img: any) => (
          <a class="projectSectionLinks" href={`/tutorial/${img.url}`}>
            <Image src={img.src} alt={img.alt} width={300} />
            <h3 style="margin-top: 10px;">{img.text}</h3>
          </a>
        ))
      }
    </div>
  </div>
  <Footer />
</Layout>
<style>
  .postsNavigationDiv {
    min-height: 50vh !important;
  }
</style>
