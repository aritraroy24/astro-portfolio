---
// chemistry project post layout import
import ChemProjectLayout from "@layouts/ChemProjectLayout.astro";

// library import
import { getCollection } from "astro:content";

// getting all chemistry projects
export async function getStaticPaths() {
  const chemistryProjectEntries = await getCollection("chemistry");
  return chemistryProjectEntries.map((entry: any) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();

const allFigureData = await Astro.glob(
  "/src/content/chemistry/completed/*/*/*.js"
);
const figureData = allFigureData.filter((figData: any) => {
  return entry.slug.includes(figData.default[0].project);
});
var altImgArr: any = [];
const allImages = await Astro.glob(
  "/src/content/chemistry/completed/*/*/*/*.png"
);
const projectImages = allImages.filter((imageData: any) => {
  altImgArr.push(imageData.default.src.split("figures/")[1].split(".")[1]);
  return imageData.default.src.includes(`/${entry.slug}/`);
});
---

<ChemProjectLayout
  frontmatter={{ ...entry.data, altImgArr, projectImages, figureData }}
>
  <Content />
</ChemProjectLayout>
<script>
  // Get all the anchor elements in the markdown file and add target="_blank" attribute
  var links = document.getElementsByTagName("a");
  for (var i = 0; i < links.length; i++) {
    links[i].setAttribute("target", "_blank");
  }
</script>
