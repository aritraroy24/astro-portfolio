---
// metadata import
import GoogleAnalytics from "@components/Meta/GoogleAnalytics.astro";
import LinkedDataJson from "@components/Meta/LinkedDataJson.astro";

// style import
import "@assets/styles/global.scss";

// defining type of title and description of the page
export interface LayoutProps {
  title?: string;
  description?: string;
}

// default values of title and description of the page
const {
  title = "Aritra Roy | Computational Chemist",
  description = "I'm a Theoretical Computational Chemist & Algorithm Enthusiast from India. I have expertise in theory, software handling, & problem-solving skill.",
} = Astro.props as LayoutProps;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <GoogleAnalytics />

    <!-- Linked Data Json -->
    <LinkedDataJson />

    <!-- metadata section -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000000" />
    <meta name="description" content={description} />

    <!-- favicon, font and other stylesheets import -->
    <link rel="icon" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css?family=Overpass:400,800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Overpass+Mono:400&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/jpswalsh/academicons@1/css/academicons.min.css"
    />
    <link rel="apple-touch-icon" href="logo192.png" />
    <link rel="manifest" href="/manifest.json" />
    <title>{title}</title>
  </head>
  <body>
    <noscript
      >You need to enable JavaScript to run all the functionality of this
      website.</noscript
    >
    <div id="root">
      <slot />
    </div>
  </body>
</html>
