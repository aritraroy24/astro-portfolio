---
// library import
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// data import
import researchTools from "@assets/js/data/researchTools";
import programmingTools from "@assets/js/data/programmingTools";

// asset import
import headshot from "@images/about/headshot.jpg";

// style import
import "./styles/About.scss";
---

<main class="AboutMe" id="about" data-name="AboutMe">
  <h2>
    <span class="number-heading">01.</span>About Me
  </h2>
  <section class="about-box">
    <!-- about description - left section -->
    <section class="about-description">
      <p>
        Currently, I'm a doctoral researcher at <a
          href="https://www.lsbu.ac.uk/"
          target="_blank"
          rel="noopener noreferrer"
          class="hyperlink"
        >
          LSBU, UK
        </a> in <b>Chemical Process and Energy Engineering Dept.</b> under {" "}
        <a
          href="https://scholar.google.com.sg/citations?user=hfyoL4AAAAAJ&hl=en"
          target="_blank"
          rel="noopener noreferrer"
          class="hyperlink"
        >
          Dr John Buckeridge
        </a> and
        <a
          href="https://scholar.google.co.uk/citations?user=cwB7NzAAAAAJ&hl=en"
          target="_blank"
          rel="noopener noreferrer"
          class="hyperlink"
        >
          Dr Chiara Gattinoni
        </a>.
      </p>
      <p>
        Along with that, I'm working on multiple collaborative projects
        primarily under the guidance of {" "}
        <a
          href="https://www.felipefantuzzi.org/"
          target="_blank"
          rel="noopener noreferrer"
          class="hyperlink"
        >
          Dr Felipe Fantuzzi
        </a> from <span><b>Kent University</b></span>.
      </p>
      <p>
        My PhD project is based on <b
          >using text-mined scientific data for designing piezoelectric
          materials</b
        >. Currently I'm learning <a
          href="https://www.vasp.at/"
          target="_blank"
          rel="noopener noreferrer"
          class="hyperlink"
        >
          VASP
        </a>, and various architectures of <b>AI-ML</b>.
      </p>
      <p>Here are a few tools I've been working with recently:</p>
      <section class="skills">
        <ul>
          {
            researchTools.map((tool: any) => {
              if (tool.id % 2 != 0) {
                return (
                  <li>
                    <span>▹ </span>
                    {tool.toolName}
                    <span class="es6">{tool.version}</span>
                  </li>
                );
              }
            })
          }
        </ul>
        <ul>
          {
            researchTools.map((tool: any) => {
              if (tool.id % 2 == 0) {
                return (
                  <li>
                    <span>▹ </span>
                    {tool.toolName}
                    <span class="es6">{tool.version}</span>
                  </li>
                );
              }
            })
          }
        </ul>
      </section>
      <div class="iconsContainerMobile">
        {
          programmingTools.map((item: any) => {
            const typeMapping: { [key: string]: string } = {
              language: "Language",
              library: "Library/Framework",
              backend: "Backend",
              tools: "Tools",
              os: "Operating System",
              ui: "UI/UX",
              blog: "Blog Writing",
              assistant: "AI Assistants",
            };

            const itemType = Object.keys(item)[0];
            const displayName =
              typeMapping[itemType as keyof typeof typeMapping];

            return (
              <div class="langIcons">
                <p>{displayName}:</p>
                <div>
                  {item[itemType].map((itemElement: any) => (
                    <a href={itemElement.url}>
                      <Icon
                        name={itemElement.iconName}
                        title={itemElement.title}
                      />
                    </a>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </section>
    <!-- about image - right section -->
    <section class="img-container">
      <Image src={headshot} alt="Aritra Face" width={300} height={300} />
      <div class="iconsContainer">
        {
          programmingTools.map((item: any) => {
            const typeMapping: { [key: string]: string } = {
              language: "Language",
              library: "Library/Framework",
              backend: "Backend",
              tools: "Tools",
              os: "Operating System",
              ui: "UI/UX",
              blog: "Blog Writing",
              assistant: "AI Assistants",
            };

            const itemType = Object.keys(item)[0];
            const displayName =
              typeMapping[itemType as keyof typeof typeMapping];

            return (
              <div class="langIcons">
                <p>{displayName}:</p>
                <div>
                  {item[itemType].map((itemElement: any) => (
                    <a href={itemElement.url}>
                      <Icon
                        name={itemElement.iconName}
                        title={itemElement.title}
                      />
                    </a>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </section>
  </section>
</main>
