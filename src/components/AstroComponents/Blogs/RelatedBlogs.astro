---
// function import
import { formatDate } from "@js/utils";

// // destructuring astro properties
const { relatedBlogs } = Astro.props;

// style import
import "./styles/RelatedBlogs.scss";
---

<div class="relatedBlogsContainer">
  <h2>Related Blogs</h2>
  <div class="relatedBlogs">
    {
      relatedBlogs.map((blog: any) => (
        <div>
          <h4>
            <a href={`/tutorial/blogs/${blog.slug}`}>{blog.data.title}</a>
          </h4>
          <small>
            {blog.data.duration} â€¢ {formatDate(blog.data.pubDate)}
          </small>
        </div>
      ))
    }
  </div>
</div>
