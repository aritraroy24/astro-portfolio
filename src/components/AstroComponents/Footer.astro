---
// library import
import { Icon } from "astro-icon/components";

// component import
import Newsletter from "./Common/Newsletter.astro";

// style import
import "./styles/Footer.scss";

// import data
import socials from "@js/data/socials";
---

<footer class="Footer" id="footer">
  <div class="footerSocials" id="footerSocials">
    {
      socials.map((social: any) => {
        return (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            title={social.title}
            aria-label={social.title}
          >
            <span role="img" aria-label={social.title}>
              <Icon name={social.name} title={social.title} />
            </span>
          </a>
        );
      })
    }
  </div>
  <Newsletter />
  <div class="copyrightDiv">
    <p>
      &copy; 2023 <a href="/"><span>aritraroy.live</span></a>
    </p>
    <p>❤️</p>
    <p>All rights reserved.</p>
  </div>
</footer>
