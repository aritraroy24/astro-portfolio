{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*.astro", "types/**/*.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@content/*": ["src/content/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@js/*": ["src/assets/js/*"]
    }
  }
}
